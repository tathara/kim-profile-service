{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "dynamicImport": true,
            "decorators": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "target": "ES2021",
        "externalHelpers": false,
        "keepClassNames": true,
        "loose": false,
        "minify": {
            "compress": false,
            "mangle": false
        },
        "baseUrl": "./src",
        "paths": {
            "@config": ["config"],
            "@db": ["db"],
            "@entities/*": ["db/entities/*"],
            "@modules/*": ["modules/*"],
            "@enums": ["enums/index.ts"]
        }
    },
    "module": {
        "type": "commonjs"
    }
}
